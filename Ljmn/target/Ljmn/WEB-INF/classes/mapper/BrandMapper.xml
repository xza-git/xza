<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fh.dao.BrandMapper" >
  <resultMap id="BaseResultMap" type="com.fh.entity.BrandInfo" >
    <id column="id" property="id" jdbcType="VARCHAR" />
    <result column="brandName" property="brandName" jdbcType="VARCHAR" />
    <result column="createDate" property="createDate" jdbcType="TIMESTAMP" />
  </resultMap>
  <sql id="Base_Column_List" >
    id,brandName,createDate
  </sql>
  <!-- 通过品牌名查询品牌 -->
  <select id="queryBrandByName" parameterType="java.lang.String" resultType="com.fh.entity.BrandInfo">
  		select 
  		<include refid="Base_Column_List"/>
  		from t_brand where brandName=#{brandName}
  </select>
  
  <!-- 通过品牌id查询品牌 -->
  <select id="queryBrandById" parameterType="java.lang.String" resultType="com.fh.entity.BrandInfo">
  		select 
  		<include refid="Base_Column_List"/>
  		from t_brand where id=#{id}
  </select>
  
  <!-- 分页查询 -->
  <select id="findBrandByPage" resultMap="BaseResultMap" parameterType="Map">
  		<!-- limit start,2 -->
  		SELECT <include refid="Base_Column_List" />
  		  FROM  t_brand 
  		  <where>
  		  	<if test="brandName !=null and brandName!=''">
  		  		brandName like "%" #{brandName} "%"
  		  	</if>
  		  </where>
  		  limit #{start},#{pageSize}
  </select>
  
  <!-- 查询总条数 -->
  <select id="findCount" resultType="java.lang.Integer" parameterType="Map">
  		select count(*) from t_brand
  		 <where>
  		  	<if test="userName !=null and userName!=''">
  		  		brandName like "%" #{userName} "%"
  		  	</if>
  		  </where>
  </select>
  <!-- 删除品牌 -->
  <delete id="deleteBrand" parameterType="java.lang.String">
  		delete from t_brand where id=#{id}
  </delete>
  <!-- 修改品牌 -->
  <update id="updateBrand" parameterType="com.fh.entity.BrandInfo">
  		update t_brand set brandName = #{brandName}
  		<if test="createDate != null">
  		,createDate = #{createDate}
  		</if>
  		where id=#{id}
  </update>
  <!-- 新增品牌 -->
  <insert id="saveBrand" parameterType="com.fh.entity.BrandInfo">
	  	insert into t_brand (id,brandName,createDate) values(UUID(),#{brandName},#{createDate})
  </insert>  
  
  <!-- 查询品牌集合 -->
  <select id="queryBrandList" resultMap="BaseResultMap" >
  		select 
  		<include refid="Base_Column_List" /> 
  		from
  		t_brand
  </select>
  
</mapper>