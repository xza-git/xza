<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fh.dao.ProductMapper" >
  <resultMap id="BaseResultMap" type="com.fh.entity.ProductInfo" >
    <id column="id" property="id" jdbcType="VARCHAR" />
    <result column="productName" property="productName" jdbcType="VARCHAR" />
    <result column="mainImagePath" property="mainImagePath" jdbcType="VARCHAR" />
    <result column="price" property="price" jdbcType="DOUBLE" />
    <result column="createDate" property="createDate" jdbcType="TIMESTAMP" />
    <result column="address" property="address" jdbcType="VARCHAR" />
  </resultMap>
  <sql id="Base_Column_List" >
   tp.id as id,tp.address,tp.productName as productName,tp.price as price,tb.brandName as brandName,tp.mainImagePath as mainImagePath,tp.createDate as createDate  
  </sql>
  <sql id="query" >
  id,productName,mainImagePath,price,address
  </sql>
  <!-- 分页查询 -->
  <select id="findProductByPage" resultMap="BaseResultMap" parameterType="Map">
  		SELECT <include refid="Base_Column_List" />
  		from t_product tp left join t_brand tb on tp.brandId=tb.id
  		  <where>
  		  	<if test="productName !=null and productName!=''">
  		  		productName like "%" #{productName} "%"
  		  	</if>
  		  	<if test=" beginDate !=null and beginDate!=''">
				<![CDATA[ and createDate >= #{beginTime} ]]>
			</if>
			<if test=" endDate !=null and endDate !=''">
				<![CDATA[ and endDate <= #{endDate}]]>
			</if>
  		  	
  		  </where>
  		  limit #{start},#{pageSize}
  </select>
  
  <!-- 查询总条数 -->
  <select id="findCount" resultType="java.lang.Integer" parameterType="Map">
	select count(*) from t_product tp left join t_brand tb on tp.brandId=tb.id
	 <where>
	  	<if test="productName !=null and productName!=''">
	  		productName like "%" #{productName} "%"
	  	</if>
	  	<if test=" beginDate !=null and beginDate!=''">
			<![CDATA[ and createDate >= #{beginTime} ]]>
		</if>
		<if test=" endDate !=null and endDate !=''">
			<![CDATA[ and endDate <= #{endDate}]]>
		</if>
	  </where>
  </select>
  
  <!-- 通过商品名查询用户 -->
  <select id="queryProductByName" parameterType="java.lang.String" resultType="com.fh.entity.ProductInfo">
  		select 
  		<include refid="query"/>
  		from t_product where productName=#{productName}
  </select>
  
  <!-- 新增商品 -->
  <insert id="saveProduct" parameterType="com.fh.entity.ProductInfo">
	  	insert into t_product (id,productName,mainImagePath,price,createDate,brandId,address) values(UUID(),#{productName},#{mainImagePath},#{price},#{createDate},#{brandName},#{address})
  </insert> 
  
  <!-- 删除商品 -->
  <delete id="deleteProduct" parameterType="java.lang.String">
  		delete from t_product where id=#{id}
  </delete>
  
  <!-- 通过id查询商品   回显 -->
  <select id="queryProductById" parameterType="java.lang.String" resultType="com.fh.entity.ProductInfo">
  		SELECT <include refid="Base_Column_List" />
  		from t_product tp left join t_brand tb on tp.brandId=tb.id where tp.id=#{aaa}
  </select>
  
  <!-- 修改商品-->
  <update id="updateProduct" parameterType="com.fh.entity.ProductInfo">
  		update t_product set productName = #{productName},price = #{price},mainImagePath=#{mainImagePath},brandId=#{brandName},address=#{address}
  		where id=#{id}
  </update>
  
  <!-- 查询商品集合 -->
  <select id="queryProductList" resultMap="BaseResultMap" >
  		select 
  		<include refid="Base_Column_List" /> 
  		from
  		t_product tp left join t_brand tb on tp.brandId=tb.id
  </select>
</mapper>